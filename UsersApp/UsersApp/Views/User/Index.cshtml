@model List<UsersApp.Models.User>
@using UsersApp.Utils;
@{
    ViewData["Title"] = "Index";
}

<h2>Users</h2>

<p>
    <a class="btn btn-success" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
             Name
            </th>
            <th>
              Last Name
            </th>
            <th>
               Username
            </th>
          
            <th>
              Rol
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UuserName)
            </td>
           
            <td>
                @if (item.TypeUser == 0)
                {
                    <span> Normal</span>
                }
                else
                {
                    <span> Admin</span>
                }
            </td>
            <td>

                <a class="btn btn-primary" href="@Url.Action("Details", "User", new { iduser = @item.IdUser })">View agenda</a> |
                <a class="btn btn-success" href="@Url.Action("Edit", "User", new { id = @item.IdUser })">Edit</a>  
            </td>
        </tr>
}
    </tbody>
</table>
